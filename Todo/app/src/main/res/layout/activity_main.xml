<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_input_add"
            android:id="@+id/floatingActionButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp" app:backgroundTint="@color/colorPrimaryDark"
            android:onClick="onAdd"
    />
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="85dp"
            tools:layout_editor_absoluteX="307dp"
            android:id="@+id/listview"/>

</android.support.constraint.ConstraintLayout>